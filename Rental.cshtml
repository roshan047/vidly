
@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rental</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <div class="container col-lg-4">
        @Html.AntiForgeryToken()

        <p>
            @ViewBag.FirstNameError
        </p>

        <form class="form-control col-lg-3 col-md-3" action="~/Customer/Rental" method="post">
            
            <input type="number" id="Customer" name="Cid" value=@Model.id class="form-control " style="display:none"/>
           





            <label for="Movie" class="control-label">Movie : </label>

            <select id="Movie" name="Mid" class="form-control" multiple>
                <option>Select an option</option>
                @foreach (var i in Model.movie)
                {
                    <option value=@i.Mid> @i.name </option>
                }
            </select>

            <br />
            <label for="RentDate" class="control-label">Date</label>
            <input type="date" id="RentDate" name="DateRented" class="form-control" />
            <br />
            <input type="submit" value="Rent" class="btn btn-success"  style="margin-left:350px"/> 
           
        </form>



    </div>

</body>
</html>
