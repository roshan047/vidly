@model VR.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    <style>
        #pop{
            width:fit-content;
        }

        iframe{
            display: block;
            width: 100%;
            height:300px;
        }

        .class1{
            color:black;
        }
       /* button:hover{
            border:3px dashed orange;
        }*/
    </style>
</head>
<body>
    @Html.Partial("_navbar")
    <div class="container class1 bg-light bg-opacity-75 rounded">

        <h4>Customer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Customer ID
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cid)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsSubcribedToNewsletter)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsSubcribedToNewsletter)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MembershipType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MembershipType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Mid)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mid)
            </dd>

            <dt>
                DateOfBirth
            </dt>

            <dd>
                @Model.DateOfBirth.ToShortDateString()
            </dd>

        </dl>
        <p>

            <!--@Html.ActionLink("Edit", "Edit", new { id = Model.Cid }, new { @class = "btn btn-warning" }) |-->
            @*@Html.ActionLink("Delete", "Delete", "Customer", new { id = Model.Cid }, new { @class = "btn btn-danger" }) |*@
            @*@Html.ActionLink("Rentals", "rentallist", new { id = Model.Cid }, new { @class = "btn btn-success" }) |*@
            <!--@Html.ActionLink("Rent Movies", "Rental", new { id = Model.Cid }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Back to List", "Index", "Customer", null, new { @class = "btn btn-primary" })-->



        </p>

        <div>
            <br />
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                DELETE
            </button>
            |
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                Rentals
            </button>
            |
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal2">
                EDIT
            </button>
            |
            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal3">
                Rent Movies
            </button>
            |
            <button type="button" class="btn btn-primary" onclick="history.back()">
                BACK
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to delete this Customer ?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <dl class="dl-horizontal">
                                <dt>
                                    Customer ID
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Cid)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.name)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.IsSubcribedToNewsletter)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.IsSubcribedToNewsletter)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.MembershipType)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.MembershipType)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Mid)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Mid)
                                </dd>

                                <dt>
                                    DateOfBirth
                                </dt>

                                <dd>
                                    @Model.DateOfBirth.ToShortDateString()
                                </dd>

                            </dl>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                            <form action="~/Customer/Delete/@Model.Cid">
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger " data-bs-dismiss="modal" />

                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

       
        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Movie Rented</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <iframe src="rentallist?id=@Model.Cid"
                                name="targetframe"
                                allowTransparency="true"
                                scrolling="yes"
                                frameborder="0">
                        </iframe>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="location.reload()">Close</button>

                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">EDIT DETAILS</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <iframe src="Edit?id=@Model.Cid"
                                name="targetframe"
                                allowTransparency="true"
                                scrolling="yes"
                                frameborder="0">
                        </iframe>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="location.reload()">Close</button>

                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Rent Movies</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <iframe src="Rental?id=@Model.Cid"
                                name="targetframe"
                                allowTransparency="true"
                                scrolling="no"
                                frameborder="0">
                        </iframe>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="location.reload()">Close</button>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script>
       
    </script>
</body>
</html>
